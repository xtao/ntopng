CREDIS_HOME=third-party/credis-0.2.3
CREDIS=$(CREDIS_HOME)/credis.o
CREDIS_INC=-I$(CREDIS_HOME)
######
LIBNDPI_INC=-I./nDPI/src/include
LIBNDPI=./nDPI/src/lib/.libs/libndpi.a 
######
LIBPCAP=-lpcap
######

LIBMICRO_HOME=./third-party/libmicrohttpd-0.9.26
LIBMICRO_INC=-I$(LIBMICRO_HOME)/src/include/
LIBMICROHTTPD=$(LIBMICRO_HOME)/src/daemon/.libs/libmicrohttpd.a


######
TARGET = ntopng
LIBS = -lm $(LIBNDPI) $(LIBPCAP) $(LIBMICROHTTPD)
CPPFLAGS = -g -Wall $(CREDIS_INC) $(LIBNDPI_INC) $(LIBMICRO_INC)

.PHONY: default all clean

default: $(LIBNDPI) $(TARGET)
all: default


OBJECTS = $(patsubst %.cpp, %.o, $(wildcard *.cpp)) $(CREDIS)
HEADERS = $(wildcard *.h)

%.o: %.c $(HEADERS)
	g++ $(CPPFLAGS) -c $< -o $@

%.o: %.cpp $(HEADERS)
	g++ $(CPPFLAGS) -c $< -o $@

.PRECIOUS: $(TARGET) $(OBJECTS)

$(TARGET): $(OBJECTS) $(LIBMICROHTTPD)
	g++ $(OBJECTS) -Wall $(LIBS) -o $@

$(LIBNDPI):
	svn co https://svn.ntop.org/svn/ntop/trunk/nDPI/
	cd nDPI; ./configure; make

$(LIBMICROHTTPD): 
	cd $(LIBMICRO_HOME); ./configure; make

clean:
	-rm -f *.o *~ svn-commit.* config.h
	-rm -f $(TARGET)
	-rm -rf nDPI
