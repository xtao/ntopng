OS := $(shell uname -s)
######
CREDIS_HOME=third-party/credis-0.2.3
CREDIS=$(CREDIS_HOME)/credis.o
CREDIS_INC=-I$(CREDIS_HOME)
######
LIBNDPI_INC=-I./nDPI/src/include
LIBNDPI=./nDPI/src/lib/.libs/libndpi.a 
######
LIBPCAP=-lpcap
######
LIBMICRO_HOME=./third-party/libmicrohttpd-0.9.26
LIBMICRO_INC=-I$(LIBMICRO_HOME)/src/include/
LIBMICROHTTPD=$(LIBMICRO_HOME)/src/daemon/.libs/libmicrohttpd.a
######
LUAJIT_HOME=./third-party/LuaJIT-2.0.1
LUAJIT_INC=-I$(LUAJIT_HOME)/src
LUAJIT_LIB=$(LUAJIT_HOME)/src/libluajit.a
######
######
TARGET = ntopng
LIBS = $(LIBNDPI) $(LIBPCAP) $(LIBMICROHTTPD) $(LUAJIT_LIB) @LINK_OPTS@ -lm -ldl
CPPFLAGS = -g -Wall $(CREDIS_INC) $(LIBNDPI_INC) $(LIBMICRO_INC) $(LUAJIT_INC)

ifeq ($(OS),Linux)
LIBS += -lrt
endif

.PHONY: default all clean

default: $(LIBNDPI) $(LUAJIT_LIB) $(TARGET)
all: default

OBJECTS = $(patsubst %.cpp, %.o, $(wildcard *.cpp)) $(CREDIS)
HEADERS = $(wildcard *.h)

%.o: %.c $(HEADERS)
	g++ $(CPPFLAGS) -c $< -o $@

%.o: %.cpp $(HEADERS)
	g++ $(CPPFLAGS) -c $< -o $@

.PRECIOUS: $(TARGET) $(OBJECTS)

$(TARGET): $(OBJECTS) $(LIBMICROHTTPD)
	g++ $(OBJECTS) -Wall $(LIBS) -o $@

$(LIBNDPI):
	svn co https://svn.ntop.org/svn/ntop/trunk/nDPI/
	cd nDPI; ./configure; make

$(LUAJIT_LIB):
	cd $(LUAJIT_HOME); make

$(LIBMICROHTTPD): 
	cd $(LIBMICRO_HOME); ./configure; make

clean:
	-rm -f *.o *~ svn-commit.* #config.h
	-rm -f $(TARGET)

veryclean:
	-rm -rf nDPI

